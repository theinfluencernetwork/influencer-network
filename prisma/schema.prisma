// Prisma schema for MongoDB

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model InfluencerApplication {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())

  fullName    String
  email       String
  phone       String?
  city        String?

  // Uncomment if needed later
  // niches      String[]
  // platforms   String[]
  // audienceSize Int?
  // bio         String?
  // portfolioUrl String?
  // ratesNote   String?

  socialLink  String?
  consent     Boolean  @default(true)
}

model BrandCampaignSubmission {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt      DateTime @default(now())

  brandName      String
  contactName    String
  contactEmail   String
  contactPhone   String?

  campaignTitle  String
  description    String
  objectives     String[]
  budgetMin      Int?
  budgetMax      Int?
  startDate      DateTime?
  endDate        DateTime?
  targetCities   String[]
  deliverables   String[]
  platforms      String[]
  links          Json?
}

model ContactUsSubmission {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  formType   String
  brandName  String?
  company    String?
  website    String?
  message    String?
  fullName   String?
  socialLink String?
  phone      String
  email      String
  createdAt  DateTime @default(now())
}


